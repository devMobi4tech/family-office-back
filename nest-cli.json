{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "typeCheck": true,
    "watchAssets": true,
    "assets": [
      "mail/templates/**/*",
      {
        "include": "assets/**/*",
        "outDir": "dist"
      }
    ]
  }
}
